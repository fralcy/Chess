<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             x:Class="ChessUI.ServerConfig">
	<Border Height="800">
		<StackPanel Width="500"
				Background="White" VerticalAlignment="Center">
			<StackPanel Orientation="Horizontal">
				<CheckBox Name="WhiteCheckBox"
						  Width="60" Height="60"
						  Click="WhiteCheckBox_Click"
						  IsChecked="True"/>
				<TextBlock Text="White" FontSize="20"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<CheckBox Name="BlackCheckBox"
						  Width="60" Height="60"
						  Click="BlackCheckBox_Click"
						  />
				<TextBlock Text="Black" FontSize="20"/>
			</StackPanel>



			<Button Name="Host" Click="Host_Click"
					Height="50" Content="Host"
					Width="80"/>
			<TextBlock Height="60" Name="IPTextBlock"
					   FontSize="20" Margin="0 15 0 0"/>

			<Button Content="BACK TO MAIN MENU"
					Classes="Button"
					Width="205"
					Height="40"
					Margin="0 30 0 0"
					Click="BackToMenu_Click"/>

		</StackPanel>
	</Border>

	

</UserControl>
